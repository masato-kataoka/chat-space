.layout-notification
  .chat
    .chat-side
      .chat-user.clearfix
        masato
        .chat-user__actions
          = link_to '/group/new', class: 'chat-user__action' do
            %i.fa.fa-pencil-square-o
          = link_to '/users/1/edit', class: 'chat-user__action' do
            %i.fa.fa-cog
      %ul.chat-groups
        %li.chat-group
          = link_to '/chat-groups/18082/messages', class: 'chat-group__link' do
            %p.chat-group__name テストチャット
            %p.chat-group__message まだメッセージはありません

  .chat-main
    .chat-header.clearfix
      .chat-header--left
        テストチャット
        %p.chat-header__users
          Members:
          %span.chat-header__user masato
      .chat-header--right
        = link_to 'Edit', '/chat_groups/18082/edit', class: 'chat-header__edit-btn'

    .chat-body
      %ul.chat-messages
        %li.chat-message
          .chat-message__header.clearfix
            %p.chat-message__name masato
            %p.chat-message__time 2017/09/08 00:11:22
          %p.chat-message__body テスト

    .chat-footer
      = form_for(@message, url: {controller: 'messages', action: 'index'}) do |f|
        .chat-footer__body
          = f.text_area(:body, placeholder: 'type a message')
          %label.chat-footer__file
            = f.file_field :image
            %i.fa.fa-image
            = f.submit :Send
