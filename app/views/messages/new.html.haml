.wrapper

  = render 'shared/side_bar'

  .chat
    .header
      .left-header__title
        = @group.name
      %ul.left-header__members
          Memberï¼š
          %li.member
            = @group.users.pluck(:name).join(' ')
    .right-header
      .right-header__button
        = link_to 'Edit', edit_group_url(@group), class: 'chat-header__edit-btn'

  .chat-body
    %ul.chat-messages
      %li.chat-message
        .chat-message__header.clearfix
          - @messages.each do |message|
            %p.chat-message__name
              = message.user.name
            %p.chat-message__time
              = message.created_at
            %p.chat-message__body
              = message.body
            %p.chat-message__image
              = message.image

  .chat-footer
    = form_for [@group, @message] do |f|
      .chat-footer__body
        = f.text_area(:body, id: 'message_body', placeholder: 'type a message')
        %label.chat-footer__file
          = f.file_field :image
          %i.fa.fa-image
        = f.submit :Send
